    "def reset(event):\n",
    "    s_amp.reset()\n",
    "    s_freq.reset()\n",
    "button.on_clicked(reset)\n",
    "\n",
    "# Add radio buttons to select waveform\n",
    "ax_radio = plt.axes([0.025, 0.5, 0.15, 0.15])\n",
    "radio = RadioButtons(ax_radio, ('Sine', 'Square', 'Sawtooth'))\n",
    "\n",
    "def wave_type(label):\n",
